# ターゲットURL（クロール対象のブログURL）
TARGET_URL=https://hidemiyoshi.jp/blog/

# コレクション名（出力ファイル名に使用）
COLLECTION_NAME=hides_blog

# ワーカー数（並列実行数）
WORKERS=2

# メモリ制限（MB単位）
CRAWL_MEMORY_LIMIT=2000

# クロールタイムアウト（秒、0は無制限）
CRAWL_TIMEOUT=0

# ページロードタイムアウト（秒）
PAGE_TIMEOUT=90

# ページ追加待機時間（秒）
PAGE_EXTRA_DELAY=2

# スクロール遅延（秒）
SCROLL_DELAY=1

# ネットワークアイドル待機時間（ミリ秒）
NETWORK_IDLE_WAIT=2000

# ビヘイビアタイムアウト（秒）
BEHAVIOR_TIMEOUT=60

# クロール制限（0は無制限）
CRAWL_LIMIT=0

# 最大ページ制限（0は無制限）
MAX_PAGE_LIMIT=0